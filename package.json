{
    "name": "solana-stablecoin-standard",
    "version": "0.1.0",
    "private": true,
    "description": "Solana Stablecoin Standard (SSS) implementation",
    "scripts": {
        "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
        "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
        "test": "anchor test",
        "cli": "node cli/dist/index.js",
        "tui": "node admin-tui/dist/index.js",
        "frontend:dev": "yarn workspace frontend dev",
        "frontend:build": "yarn workspace frontend build",
        "copy-idl": "mkdir -p frontend/public/idl && cp target/idl/stablecoin.json target/idl/transfer_hook.json target/idl/oracle.json frontend/public/idl/ 2>/dev/null || true"
    },
    "workspaces": [
        "sdk",
        "cli",
        "admin-tui",
        "frontend"
    ],
    "dependencies": {
        "@coral-xyz/anchor": "^0.31.1",
        "@solana/spl-token": "^0.4.10",
        "@solana/web3.js": "^1.98.0"
    },
    "devDependencies": {
        "@types/chai": "^4.3.20",
        "@types/mocha": "^10.0.10",
        "chai": "^4.5.0",
        "mocha": "^10.8.2",
        "prettier": "^2.6.2",
        "ts-mocha": "^10.0.0",
        "typescript": "^5.7.3"
    }
}